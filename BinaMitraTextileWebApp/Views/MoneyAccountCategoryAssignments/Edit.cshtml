@model BinaMitraTextileWebApp.Models.MoneyAccountCategoryAssignmentsModel

@{
    BinaMitraTextileWebApp.Models.UserAccountRolesModel access = BinaMitraTextileWebApp.Controllers.UsersController.getUserAccess(Session);
    string ControllerName = "MoneyAccountCategoryAssignments";
    ViewBag.SelectedNavigationMenu = "Internal";
    ViewBag.Title = "Money Accounts Category Assignments";
    ViewBag.Subtitle = "Edit";
}

<div class="content-wrapper">

    <!-- Content area -->
    <div class="content">
        @using (Html.BeginForm())
        {
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                <!-- Form inputs -->
                <div class="card">
                    <div class="card-header header-elements-inline">
                        <h5 class="card-title text-uppercase">@ViewBag.Title</h5>
                    </div>
                    <div class="card-body" style="min-height:400px">
                        <fieldset class="mb-3">
                            <legend class="text-uppercase font-size-sm font-weight-bold">@ViewBag.Subtitle</legend>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.MoneyAccounts_Id, htmlAttributes: new { @class = "col-form-label col-lg-1 required" })
                                <div class="col-lg-3">
                                    @Html.DropDownListFor(model => model.MoneyAccounts_Id, ViewBag.MoneyAccounts as SelectList, "Please Select", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.MoneyAccounts_Id, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.MoneyAccountCategories_Id, htmlAttributes: new { @class = "col-form-label col-lg-1 required" })
                                <div class="col-lg-3">
                                    @Html.DropDownListFor(model => model.MoneyAccountCategories_Id, ViewBag.MoneyAccountCategories as SelectList, "Please Select", new { @class = "form-control select2" })
                                    @Html.ValidationMessageFor(model => model.MoneyAccountCategories_Id, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Expense, htmlAttributes: new { @class = "col-form-label col-lg-1" })
                                <div class="col-lg-5">
                                    <div class="form-check form-check-switchery">
                                        <label class="form-check-label">
                                            @Html.EditorFor(model => model.Expense, new { htmlAttributes = new { @class = "form-check-input-switchery" } })
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Expense, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.BankCashDeposit, htmlAttributes: new { @class = "col-form-label col-lg-1" })
                                <div class="col-lg-5">
                                    <div class="form-check form-check-switchery">
                                        <label class="form-check-label">
                                            @Html.EditorFor(model => model.BankCashDeposit, new { htmlAttributes = new { @class = "form-check-input-switchery" } })
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.BankCashDeposit, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.ReceivedCash, htmlAttributes: new { @class = "col-form-label col-lg-1" })
                                <div class="col-lg-5">
                                    <div class="form-check form-check-switchery">
                                        <label class="form-check-label">
                                            @Html.EditorFor(model => model.ReceivedCash, new { htmlAttributes = new { @class = "form-check-input-switchery" } })
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ReceivedCash, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.ProfitLoss, htmlAttributes: new { @class = "col-form-label col-lg-1" })
                                <div class="col-lg-5">
                                    <div class="form-check form-check-switchery">
                                        <label class="form-check-label">
                                            @Html.EditorFor(model => model.ProfitLoss, new { htmlAttributes = new { @class = "form-check-input-switchery" } })
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.ProfitLoss, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Default, htmlAttributes: new { @class = "col-form-label col-lg-1" })
                                <div class="col-lg-5">
                                    <div class="form-check form-check-switchery">
                                        <label class="form-check-label">
                                            @Html.EditorFor(model => model.Default, new { htmlAttributes = new { @class = "form-check-input-switchery" } })
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Default, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "col-form-label col-lg-1" })
                                <div class="col-lg-5">
                                    @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "col-form-label col-lg-1" })
                                <div class="col-lg-5">
                                    <div class="form-check form-check-switchery">
                                        <label class="form-check-label">
                                            @Html.EditorFor(model => model.Active, new { htmlAttributes = new { @class = "form-check-input-switchery" } })
                                        </label>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </fieldset>

                        @if (access.MoneyAccountCategoryAssignments_Edit)
                        {
                            <div>
                                <button type="submit" onclick="showLoadingSpinner()" class="btn btn-primary"><i class="icon-paperplane mr-2"></i>Submit</button>
                                <a href="javascript:void(0)" onclick="Action('Index', '@ControllerName')" class="btn btn-warning"><i class="icon-cross2 mr-2"></i>Cancel</a>
                            </div>
                        }
                    </div>
                </div>
                <!-- /form inputs -->
            }
        }
    </div>
    <!-- /content area -->
</div>
